{
  "name": "coc-api-consumer",
  "version": "1.0.0",
  "description": "Clash of Clans api consumer.",
  "scripts": {
    "build": "npm-run-all --parallel build:**",
    "build:functions": "tsc && netlify-lambda build functions",
    "start": "cross-env NODE_ENV=dev npm-run-all --parallel start:**",
    "start:server": "netlify-lambda serve functions",
    "serve": "npm-run-all build start",
    "test": "jest",
    "ts-check": "tsc --noEmit --lib ES2015 ./functions/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huyurt/coc-api-consumer.git"
  },
  "keywords": [],
  "author": "huyurt",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huyurt/coc-api-consumer/issues"
  },
  "homepage": "https://github.com/huyurt/coc-api-consumer#readme",
  "dependencies": {
    "aws-serverless-express": "^3.4.0",
    "axios": "^1.2.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "isomorphic-fetch": "^3.0.0",
    "morgan": "^1.10.0",
    "serverless-http": "^3.1.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@netlify/eslint-config-node": "^7.0.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "netlify-lambda": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "typescript": "^4.9.4"
  },
  "proxy": {
    "/.netlify/functions": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/functions": ""
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test))\\.(js)x?$"
  }
}
